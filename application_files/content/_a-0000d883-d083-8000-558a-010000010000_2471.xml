            <system>false</system>
            <unlogged>false</unlogged>
        </visibility>
        <definition>  #&quot;SYSTEM_SYSRULES_textField&quot;(
    label: ri!label,
    instructions: ri!instructions,
    value: ri!value,
    saveInto: {
      ri!saveInto &lt;&lt; text(
        _,
        &quot;###-###-####;###-###-####&quot;
      ),
      ri!value &lt;&lt; text(
        _,
        &quot;###-###-####;###-###-####&quot;
      )
    }
  )</definition>
