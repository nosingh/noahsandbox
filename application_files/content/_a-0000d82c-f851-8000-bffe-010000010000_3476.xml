    <rule>
        <name>APN_uiMilestoneFieldReadOnly</name>
        <uuid>_a-0000d82c-f851-8000-bffe-010000010000_3476</uuid>
        <description>Milestone field component to show the current status in a process or sequence.</description>
        <parentUuid>_a-0000d6c5-be9f-8000-ba92-010000010000_1778</parentUuid>
        <visibility>
            <advertise>false</advertise>
            <hierarchy>true</hierarchy>
            <indexable>true</indexable>
            <quota>false</quota>
            <searchable>true</searchable>
            <system>false</system>
            <unlogged>false</unlogged>
        </visibility>
        <definition>if(
lookup(ri!steps, ri!value, 0)=0,
#&quot;_a-0000d690-12fb-8000-0f1a-010000010000_1021&quot;(
  value: &quot;ERROR: The milestone component cannot be displayed because the provided value (ri!value) was not found in the list of milestone steps (ri!steps).&quot;
  ),
#&quot;SYSTEM_SYSRULES_milestoneField&quot;(
  label: ri!label,
  instructions: ri!instructions,
  steps: ri!steps,
  active: lookup(ri!steps, ri!value, 0)
)
)</definition>
        <namedTypedValue>
            <name>label</name>
            <type>
                <name>string</name>
                <namespace>http://www.w3.org/2001/XMLSchema</namespace>
            </type>
            <value/>
        </namedTypedValue>
        <namedTypedValue>
            <name>instructions</name>
            <type>
                <name>string</name>
