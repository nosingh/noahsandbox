<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<contentHaul xmlns:a="http://www.appian.com/ae/types/2009">
    <rule>
        <name>APN_uiProgressFieldReadOnly</name>
        <uuid>_a-0000d82c-f851-8000-bffe-010000010000_3480</uuid>
        <description>Progress Bar component to display where a value falls in a list as a percentage. Most common use case would be displaying how much progress has been made in a process, based on status. </description>
        <parentUuid>_a-0000d6c5-be9f-8000-ba92-010000010000_1778</parentUuid>
        <visibility>
            <advertise>false</advertise>
            <hierarchy>true</hierarchy>
            <indexable>true</indexable>
            <quota>false</quota>
            <searchable>true</searchable>
            <system>false</system>
            <unlogged>false</unlogged>
        </visibility>
        <definition>if(
lookup(ri!steps,ri!value,0)=0,
#&quot;_a-0000d690-12fb-8000-0f1a-010000010000_1021&quot;(
  value: &quot;ERROR: The milestone component cannot be displayed because the provided value (ri!value) was not found in the list of steps (ri!steps).&quot;
  ),
#&quot;SYSTEM_SYSRULES_progressBarField&quot;(
    label:ri!label,
    instructions: ri!instructions,
    percentage: lookup(ri!steps,ri!value,0)/
  length(ri!steps)*100
)
)</definition>
        <namedTypedValue>
            <name>label</name>
            <type>
                <name>string</name>
                <namespace>http://www.w3.org/2001/XMLSchema</namespace>
            </type>
            <value/>
        </namedTypedValue>
        <namedTypedValue>
            <name>instructions</name>
            <type>
                <name>string</name>
                <namespace>http://www.w3.org/2001/XMLSchema</namespace>
            </type>
            <value/>
        </namedTypedValue>
        <namedTypedValue>
            <name>steps</name>
            <type>
                <name>Variant</name>
                <namespace>http://www.appian.com/ae/types/2009</namespace>
            </type>
        </namedTypedValue>
        <namedTypedValue>
            <name>value</name>
            <type>
                <name>Variant</name>
                <namespace>http://www.appian.com/ae/types/2009</namespace>
            </type>
        </namedTypedValue>
        <preferredEditor>legacy</preferredEditor>
        <offlineEnabled>false</offlineEnabled>
    </rule>
