<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<contentHaul xmlns:a="http://www.appian.com/ae/types/2009">
    <rule>
        <name>APN_uiGridTextColumnAuto</name>
        <uuid>_a-0000d73e-944a-8000-9ba2-011c48011c48_13169</uuid>
        <description>Returns a GridTextColumn with the data automatically derived from the non-indexed CDT data, a field name (dot-notation allowed), and an (optional) formatter rule. 'data' is the non-indexed, CDT data array, usually the 'data' field of DataSubset.</description>
        <parentUuid>_a-0000d744-e18d-8000-4594-010000010000_1405</parentUuid>
        <visibility>
            <advertise>false</advertise>
            <hierarchy>true</hierarchy>
            <indexable>true</indexable>
            <quota>false</quota>
            <searchable>true</searchable>
            <system>false</system>
            <unlogged>false</unlogged>
        </visibility>
        <definition>with(
 indexData: if(isnull(ri!data),{},reduce(fn!index, ri!data, split(ri!field, &quot;.&quot;))),
  #&quot;SYSTEM_SYSRULES_gridTextColumn&quot;(
    label: ri!label,
    field: ri!field,
    data: if(isnull(ri!formatter), indexData, apply(ri!formatter, indexData)),
    alignment: ri!alignment
  )
)</definition>
        <namedTypedValue>
            <name>label</name>
            <type>
                <name>string</name>
                <namespace>http://www.w3.org/2001/XMLSchema</namespace>
            </type>
            <value/>
        </namedTypedValue>
        <namedTypedValue>
            <name>field</name>
            <type>
                <name>string</name>
                <namespace>http://www.w3.org/2001/XMLSchema</namespace>
            </type>
            <value/>
        </namedTypedValue>
        <namedTypedValue>
            <name>data</name>
            <type>
                <name>Variant</name>
                <namespace>http://www.appian.com/ae/types/2009</namespace>
            </type>
        </namedTypedValue>
        <namedTypedValue>
            <name>alignment</name>
            <type>
                <name>string</name>
                <namespace>http://www.w3.org/2001/XMLSchema</namespace>
            </type>
            <value/>
        </namedTypedValue>
        <namedTypedValue>
            <name>formatter</name>
            <type>
                <name>Variant</name>
                <namespace>http://www.appian.com/ae/types/2009</namespace>
            </type>
        </namedTypedValue>
        <preferredEditor>legacy</preferredEditor>
        <offlineEnabled>false</offlineEnabled>
    </rule>
    <roleMap public="true">
        <role allowForAll="false" inherit="true" name="readers">
            <users/>
            <groups/>
        </role>
        <role allowForAll="false" inherit="true" name="authors">
            <users/>
